{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.ts$",
    "excludePattern": "(test|node_modules|dist)"
  },
  "opts": {
    "destination": "docs",
    "recurse": true,
    "template": "default"
  },
  "plugins": [
    "node_modules/jsdoc/plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
} 